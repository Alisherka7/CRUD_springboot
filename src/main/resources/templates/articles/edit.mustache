{{>layout/header}}
{{#article}}
<div class="container">
    <form action="/articles/update" method="post">
        <input name="id" type="hidden" value="{{id}}"/>
        <div class="mb-3">
            <label for="exampleInputEmail1">제목</label>
            <input type="text" class="form-control" value="{{title}}" name="title" id="tema" placeholder="Enter email">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1">내용</label>
            <textarea name="content" class="form-control" placeholder="내용">{{content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/articles/{{article.id}}">Back to List</a>
    </form>
</div>

{{/article}}
{{>layout/footer}}